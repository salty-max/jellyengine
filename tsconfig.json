{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "strict": true,
    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "spec"]
}
